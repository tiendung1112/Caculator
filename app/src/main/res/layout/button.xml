<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#aaaaaa">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:visibility="visible"
        app:columnCount="4"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="1dp">


        <Button
            android:id="@+id/ce"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#999999"
            android:text="CE"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_row="0" />

        <Button
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#aaaaaa"
            android:text="C"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_row="0" />

        <Button
            android:id="@+id/bs"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#aaaaaa"
            android:text="BS"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_row="0" />

        <Button
            android:id="@+id/chia"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#aaaaaa"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_row="0" />

        <Button
            android:id="@+id/so7"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#eeeeee"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/so8"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#eeeeee"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/so9"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#eeeeee"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/nhan"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#aaaaaa"
            android:text="x"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/so4"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#eeeeee"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/so5"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#eeeeee"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/so6"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#eeeeee"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_row="2" />

        <Button
            android:id="@+id/tru"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#aaaaaa"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/so1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#eeeeee"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/so2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#eeeeee"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/so3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#eeeeee"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/cong"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="#aaaaaa"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/dau"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#aaaaaa"
            android:text="+/-"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/so0"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#eeeeee"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/btdot"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#aaaaaa"
            android:text="."
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/bang"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#aaaaaa"
            android:text="="
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="4" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>